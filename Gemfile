source 'https://rubygems.org'

gem 'bundler', '>= 1.8.4'
# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'

gem 'rails-assets-bootstrap', '3.3.7', source: 'https://rails-assets.org'
# source 'https://rails-assets.org' do
