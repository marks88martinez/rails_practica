<div class="container">

      <!-- <p id="notice"><%= notice %></p> -->
      <script type="text/javascript">
      $.notify("<%= notice %>", "success")

      </script>
      <h1> <%= "#{t('message.listing')} #{@contacts.model_name.human(count: 2)}"%></h1>

      <table class="table">
        <thead>
          marcos
          <tr>
            <th><%=@contacts.human_attribute_name("id")%></th>
            <th><%=@contacts.human_attribute_name("name")%></th>
            <th><%=@contacts.human_attribute_name("email")%></th>
            <th><%=@contacts.human_attribute_name("kind")%></th>
            <th><%=@contacts.human_attribute_name("rmk")%></th>

            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @contacts.each do |contact| %>
            <tr   style="background: <%= cycle("#EEEEEE", "white")%>">
              <td>
                <%= contact.id%>
              </td>
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>
              <td><%= contact.kind.description %></td>

              <td><%= link_to t('buttons.show'), contact, :class=>'btn btn-primary'%></td>
              <td><%= link_to t('buttons.edit'), edit_contact_path(contact), :class=>'btn btn-warning' %></td>
              <td><%= link_to  t('buttons.destroy'), contact, method: :delete, data: { confirm:t('message.confirm')} , :class=>'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @contacts%>
      <br>

      <%= link_to t('buttons.new'), new_contact_path %>




</div>
